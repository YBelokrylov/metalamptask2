mixin dropdown(title, text, boxSize, type)
  div(class="input-form dropdown" class=type)
    div(class="input-form__title text text_type_bold text_size_small text_dark-shade_100 text_uppercase")= title
      
    div(class="input-form__box dropdown__head" class=boxSize)
      div(class="dropdown__input text text_type_regular text_size_medium text_dark-shade_75")= text
      div(type="button" class="dropdown__expand-more material-icons material-icons_size_m material-icons_dark-shade_75") expand_more

    block