include ../../commonBlocks/rate-button/rate-button

mixin room-card(number, price, currentRating, numberOfReviews, isLux)
  .room-card
    .room-card__gallery
      span(class="material-icons material-icons_color_white material-icons_size_m room-card__chevron") chevron_left
      span(class="material-icons material-icons_color_white material-icons_size_m room-card__chevron") chevron_right
      .room-card__slider
        div(class="room-card__slider-circle room-card__slider-circle_active")
        .room-card__slider-circle
        .room-card__slider-circle
        .room-card__slider-circle

    .room-card__info
      .room-card__line
        span(class="room-card__number text text_type_bold text_size_large text_dark-shade_100") 
          span(class="text_size_medium") № 
          |#{number}
        if (isLux)
          span(class="room-card__lux text text_type_bold text_size_small text_color_purple text_uppercase") люкс
        span(class="room-card__price-per-day text text_type_bold text_size_medium text_dark-shade_50") 
          |#{price}₽ 
          span(class="text_type_regular text_size_small") в сутки

      div(class="room-card__line room-card__rating")
        +rate-button(number, currentRating, true)
        span(class="room-card__price-per-day text text_type_bold text_size_medium text_dark-shade_50") 
          |#{numberOfReviews} 
          span(class="text_type_regular text_size_small") Отзывов
